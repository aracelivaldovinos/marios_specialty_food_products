
<h1 class="header">Edit product</h1>
<div class="mx-auto text center" style="width:50%" id="form">
    <div class="card p-4">

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :cost %>
  <br>
  <%= f.text_field :cost %>
  <br>
  <%= f.label :country_of_origin%>
  <br>
  <%= f.text_field :country_of_origin %>
  <br>
  <br>
  <%= f.submit  %>
<% end %>
</div>
</div>