<div class="heading">
<h1 class="header">Coffee Products</h1>
<hr>

<div class="text">
<%= link_to "Create new product", new_product_path %>
<br>
<br>
<%= link_to "Go Back to MAIN", dashboard_index_path %>
</div>
<hr>
<br>
</div>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-2 mb-4">
        <div class="card">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" width ="350" heigth="auto" alt="">
            <div class="card-body">
              <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
              <p class="card-text">$ <%= product.cost %>
              <br>
              Country of Origin: <%= product.country_of_origin %>
              </p>
              
              <a href="#" class="btn btn-outline-secondary btn-sm">
              <i class="far fa-heart"></i></a>
            </div>
        </div>
      </div>
    <% end %>
  </div>  







